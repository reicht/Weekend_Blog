  <label for='title'>Title:</label><br>
  <input type='text' name='title' id='title'/><br>
  <label for='body'>Body:</label><br>
  <input type='text' name='body' id='body'/>
  <hr><br>
  <input type='submit' name='commit' id='create_post'  />
</form>
